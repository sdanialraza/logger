{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@sdanialraza/logger",
  "description": "A simple and lightweight logger",
  "version": "1.0.1",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && tsup",
    "commitlint": "commitlint --edit",
    "dev": "tsc && tsup && node dist/index.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint --fix src",
    "lint:check": "eslint src",
    "prepare": "husky",
    "release": "pnpm build && changeset publish",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "author": "Danial Raza <danialrazafb@gmail.com>",
  "bugs": {
    "url": "https://github.com/sdanialraza/logger/issues"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-angular": "^19.0.0",
    "@types/node": "^20.11.17",
    "esbuild-plugin-version-injector": "^1.2.1",
    "eslint": "^8.56.0",
    "eslint-config-neon": "^0.1.58",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.10",
    "is-ci": "^3.0.1",
    "kolorist": "^1.8.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "terser": "^5.27.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sdanialraza/logger.git"
  },
  "type": "module"
}
